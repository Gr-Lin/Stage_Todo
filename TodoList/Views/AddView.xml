<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Add new Todo"/>
  <EditText
    android:id="name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="Title..."
    Text="{Binding Title, Mode=TwoWay, UpdateEvent=TextChanged}"/>
  <EditText
    android:id="descitption"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="Description..."
    Text="{Binding Description, Mode=TwoWay, UpdateEvent=TextChanged}"/>
  <Button
    android:id="save"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Save Todo"
    Click="{Binding ButtonSave}"/>
</LinearLayout> 

